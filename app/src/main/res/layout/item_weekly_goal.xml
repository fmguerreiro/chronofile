<?xml version="1.0" encoding="utf-8" ?>
<com.google.android.material.card.MaterialCardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="8dp"
  app:cardCornerRadius="8dp"
  app:cardElevation="1dp"
  app:strokeWidth="1dp"
  app:strokeColor="?attr/colorOutlineVariant"
>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
  >
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
    >
      <TextView
        android:id="@+id/goalActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:textStyle="bold"
        tools:text="Exercise"
      />
      
      <TextView
        android:id="@+id/goalTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        tools:text="5.0h"
      />
      
      <ImageButton
        android:id="@+id/editGoalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_edit"
        android:contentDescription="Edit goal"
        android:padding="8dp"
      />
      
      <ImageButton
        android:id="@+id/deleteGoalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="Delete goal"
        android:padding="8dp"
      />
    </LinearLayout>
    
    <LinearLayout
      android:id="@+id/progressSection"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="12dp"
      android:visibility="gone"
    >
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp"
      >
        <TextView
          android:id="@+id/progressText"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textAppearance="?attr/textAppearanceBodySmall"
          android:textColor="?attr/colorOnSurfaceVariant"
          tools:text="2.5h / 5.0h"
        />
        
        <TextView
          android:id="@+id/progressPercentage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAppearance="?attr/textAppearanceBodySmall"
          android:textColor="?attr/colorOnSurfaceVariant"
          tools:text="50%"
        />
      </LinearLayout>
      
      <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:indicatorColor="?attr/colorPrimary"
        app:trackColor="?attr/colorSurfaceVariant"
        tools:progress="50"
      />
    </LinearLayout>
  </LinearLayout>
</com.google.android.material.card.MaterialCardView>